description "Tomcat servlet container"

start on runlevel [2345]
stop on runlevel [!2345]
respawn
respawn limit 10 5

setuid {{ tomcat_user_name }}
setgid {{ tomcat_user_group }}

env JAVA_HOME={{ ansible_local.java.general.java_home }}
env CATALINA_HOME={{ tomcat_env_catalina_home }}
env CATALINA_BASE={{ tomcat_env_catalina_base }}
{% if tomcat_enable_remote_debug %}
{% if tomcat_base_port == 0 %}
env CATALINA_OPTS="-agentlib:jdwp=transport=dt_socket,address=8000,server=y,suspend=n"
{% else %}
env CATALINA_OPTS="-agentlib:jdwp=transport=dt_socket,address={{ tomcat_debug_port }},server=y,suspend=n"
{% endif %}
{% endif %}

script
  exec {{ tomcat_env_catalina_home }}/bin/catalina.sh run
end script

post-stop script
  rm -rf {{ tomcat_env_catalina_base }}/temp/*
end script
